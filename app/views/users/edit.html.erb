<%# 課題のために作ったページ %>

<h1>Edit</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        
        <%= form_for(@user) do |f| %>
        
        <%= render 'shared/error_messages', object: f.object %>
        
        <%= f.label :name %>
        
        <%= f.text_field :name %>
        
        
        <%= f.label :email %>
        
        <%= f.text_field :email %>
        
        
        <%= f.label :region, "Region" %>
        
        <%= f.text_field :region %>
        
        
    
        <%= f.submit "Edit", class: "btn btn-large btn-primary" %>
        
        <% end %>
    
    </div>
</div>